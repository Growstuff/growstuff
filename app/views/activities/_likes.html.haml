
- if member_signed_in? && can?(:new, Like)
  - if !activity.liked_by?(current_member)
    = link_to 'Like', likes_path(type: 'Activity', id: activity.id, format: :json),
              method: :post, remote: true, class: 'activity-like btn like-btn'
  - else
    = link_to 'Unlike', likes_path(type: 'Activity', id: actiity.id, format: :json),
              method: :delete, remote: true, class: 'activity-like btn like-btn'

= render 'likes/count', likeable: activity, liked: member_signed_in? && activity.liked_by?(current_member)
