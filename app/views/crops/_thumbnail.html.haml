
.thumbnail(style='height: 200px')
  = image_tag('http://placehold.it/150x150', :alt => '', :class => 'img-rounded')
  - if crop
    %p= link_to crop.system_name, crop
    - if crop.scientific_names.count > 0
      %p
        %i
          %small
            = crop.scientific_names.first.scientific_name
  - else
    Sample crop
