- if can? :edit, model
  %small.edit-link
    %a.editable#description{"data-form" => "#modal--#{model.id}-#{field.to_s}", href: "#"}= edit_icon

  .modal{"aria-hidden" => "true", "aria-label" => field, role: "dialog", tabindex: "-1",
    id: "modal--#{model.id}-#{field.to_s}"}
    .modal-dialog.modal-md
      .modal-content
        = bootstrap_form_for(model) do |f|
          .modal-body
            - if field_type == :text_area
              = f.text_area field
            - elsif field_type == :text_field
              = f.text_field field
            - elsif field_type == :select
              = f.select field, collection
            - elsif field_type == :date
              = f.text_field :planted_at, class: 'add-datepicker'
            = f.submit :save
