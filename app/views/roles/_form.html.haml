= form_for @role do |f|
  - if @role.errors.any?
    #error_explanation
      %h2
        = pluralize(@role.errors.size, "error")
        prohibited this role from being saved:
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
