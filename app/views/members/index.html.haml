= content_for :title, "Growstuff members"

%p
  = "Displaying #{@members.length} members"
  
%ul.thumbnails
  - @members.each do |m|
    %li.span2
      .thumbnail(style="height: 190px")
        = render :partial => "gravatar", :locals => { :email => m.email }
        = link_to shorten(m.username, 30), member_path(m)
